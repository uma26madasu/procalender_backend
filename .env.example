# Server configuration
PORT=3001
NODE_ENV=development

# MongoDB connection
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/procalender

# JWT Secret (generate a strong random secret)
JWT_SECRET=replace_with_strong_random_string

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Email service
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

# Frontend API base URL
VITE_API_URL=http://localhost:3001

# Webhook verification
WEBHOOK_SECRET=replace_with_strong_random_string

# App settings
MAX_BOOKING_DAYS_AHEAD=365
DEFAULT_MEETING_LENGTH=60